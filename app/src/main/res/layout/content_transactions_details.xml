<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Transactions Details"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@color/grey_accent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="Amount" />

            <TextView
                android:id="@+id/txDetailsAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                tools:text="1234"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/text_secondary" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="12dp"
            android:layout_marginTop="1dp"
            android:background="@color/md_grey_800" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hash (txid)" />

            <TextView
                android:id="@+id/txDetailsHash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:background="?attr/selectableItemBackground"
                tools:text="5c15acf562667768704f8cbfd56b217c9feafd8608230e556cde6b621645b40b"
                android:textColor="@color/text_secondary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_middle"
                android:background="@color/md_grey_800"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="Block Id" />

            <TextView
                android:id="@+id/txDetailsBlockId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:background="?attr/selectableItemBackground"
                tools:text="1234"
                android:textColor="@color/text_secondary" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/spacing_middle"
            android:layout_marginTop="1dp"
            android:background="@color/md_grey_800" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="Time" />

            <TextView
                android:id="@+id/txDetailsTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingTop="6dp"
                android:background="?attr/selectableItemBackground"
                tools:text="1234"
                android:textColor="@color/text_secondary" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/spacing_middle"
            android:layout_marginTop="1dp"
            android:background="@color/md_grey_800" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="Confirmation" />

            <TextView
                android:id="@+id/txDetailsConfirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingTop="6dp"
                tools:text="1234"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/text_secondary" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/spacing_middle"
            android:layout_marginTop="1dp"
            android:background="@color/md_grey_800" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="Fees" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:paddingTop="6dp"
                android:layout_gravity="end"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txDetailsFees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:background="?attr/selectableItemBackground"
                    tools:text="1234"
                    android:textColor="@color/text_secondary" />
                <ProgressBar
                    android:id="@+id/txDetailsFeesProgress"
                    android:layout_width="18dp"
                    android:indeterminate="true"
                    android:layout_gravity="end"
                    android:layout_height="18dp"/>

            </FrameLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="12dp"
            android:layout_marginTop="1dp"
            android:background="@color/md_grey_800" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="Fee rate" />



            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:paddingTop="6dp"
                android:layout_gravity="end"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txDetailsFeeRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    tools:text="1234"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="@color/text_secondary" />
                <ProgressBar
                    android:id="@+id/txDetailsFeesRateProgress"
                    android:layout_width="18dp"
                    android:indeterminate="true"
                    android:layout_gravity="end"
                    android:layout_height="18dp"/>

            </FrameLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/spacing_middle"
            android:layout_marginTop="1dp"
            android:background="@color/md_grey_800" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="Size" />

            <TextView
                android:id="@+id/txDetailsSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingTop="6dp"
                tools:text="1234"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/text_secondary" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/spacing_middle"
            android:layout_marginTop="1dp"
            android:background="@color/md_grey_800" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxxlarge"
            android:layout_margin="@dimen/spacing_middle"
            android:layout_marginTop="@dimen/spacing_middle"
            android:id="@+id/txDetailsOpenInExplorerBtn2"
            android:layout_marginBottom="@dimen/spacing_large"
            android:text="Open in explorer"
            android:textColor="@color/md_grey_600"
            app:icon="@drawable/ic_explore_black_24dp"
            app:iconTint="@color/md_grey_600"
            app:rippleColor="@color/md_grey_100"
            app:strokeColor="@color/md_grey_600" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/txDetailsOpenInExplorerBtn"
        style="@style/Widget.App.Button.OutlinedButton.IconOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:icon="@drawable/ic_explore_black_24dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:strokeColor="@android:color/transparent" />
</androidx.constraintlayout.widget.ConstraintLayout>